{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run CTest Debug",
      "type": "shell",
      "command": "ctest",
      "args": [
        "--output-on-failure",
        "--build-config", "Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
